.side-bar
  %ul
    %li.uname
      = current_user.name
    = link_to '', new_group_path, class:'fa fa-pencil-square-o'
    = link_to '', edit_user_path(current_user), class:'fa fa-cog'
  .side-bar__bottom
    - @groups.each do |group|
      .groupname
        = link_to group.name, group_messages_path(group)
      .groupname__lastmsg
        = Group.last_message(group)
 
